# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Advanced Banking System
ENVIRONMENT=development
DEBUG=True

# Security
SECRET_KEY=your-secret-key-here  # Replace with a secure secret key
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256
ENCRYPTION_MASTER_KEY=your-encryption-key-here  # Replace with a secure encryption key

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here  # Replace with your database password
POSTGRES_DB=banking_system
SQLALCHEMY_DATABASE_URI=postgresql://postgres:your-password-here@localhost/banking_system

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# Email Settings
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com  # Replace with your email
SMTP_PASSWORD=your-app-password  # Replace with your email app password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Banking System

# SMS Settings (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid  # Replace with your Twilio SID
TWILIO_AUTH_TOKEN=your-auth-token    # Replace with your Twilio token
TWILIO_FROM_NUMBER=your-twilio-number

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Compliance Settings
KYC_VERIFICATION_REQUIRED=True
AML_CHECK_THRESHOLD=10000
SUSTAINABILITY_CHECK_ENABLED=True
ETHICAL_COMPLIANCE_ENABLED=True

# Notification Settings
EMAIL_NOTIFICATIONS_ENABLED=True
SMS_NOTIFICATIONS_ENABLED=True
PUSH_NOTIFICATIONS_ENABLED=True
